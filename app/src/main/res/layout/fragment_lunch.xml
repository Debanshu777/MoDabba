<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LunchDinnerFragment.LunchFragment"
    android:weightSum="3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="4dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/cooked_rice"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/rice"
                    app:title="Rice" />
                </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="4dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/tarkadal"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/dal"
                    app:title="Dal" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="4dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/mixed_vegetable_curry"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/curry"
                    app:title="Curry" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="2">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="4dp"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/coconut_paneer_curry"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/veg_curryl"
                    app:title="Veg " />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/chicken_tikka_masala"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/veg_curryl"
                    app:title="Non Veg" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="1">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/spicy_onion_bhajis"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/bhaajil"
                    app:title="Bhaaji" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:scaleType="fitCenter"
                    android:layout_height="100dp"
                    android:layout_gravity="top|center"
                    android:src="@drawable/hqdefault"/>
                <com.alespero.expandablecardview.ExpandableCardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    app:expandOnClick="true"
                    app:inner_view="@layout/salad"
                    app:title="ACHAR" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>